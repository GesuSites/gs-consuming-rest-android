<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Tulips"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/buttonTulips"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonTomattoes"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
            android:layout_marginTop="8dp"/>
    <Button
            android:text="Tomattoes"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/buttonTomattoes"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintStart_toEndOf="@+id/buttonTulips"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Приложение было запущено, а кнопки ещё не были нажаты."
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.448"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp" android:layout_marginBottom="32dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2" android:layout_marginTop="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Control buttons"
            android:ems="10"
            android:id="@+id/editTextTextPersonName"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:layout_marginRight="24dp" android:layout_marginEnd="24dp"
            android:editable="false" android:enabled="false"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Output status"
            android:ems="10"
            android:id="@+id/editTextTextPersonName2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:layout_marginRight="24dp" android:layout_marginEnd="24dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/buttonTulips" android:editable="false"
            android:enabled="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>